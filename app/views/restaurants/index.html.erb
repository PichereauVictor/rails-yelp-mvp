<div class="container">
  <h1>Restaurants</h1>
  <ul>
    <% @restaurants.each do |restaurant| %>
      <li><%= link_to restaurant.name, restaurant_path(restaurant) %></li>
    <% end %>
  </ul>
  <br>
  <%= link_to new_restaurant_path do %>
    <i class="fa-solid fa-arrow-rotate-left"></i> create a new restaurant
  <% end %>

</div>
